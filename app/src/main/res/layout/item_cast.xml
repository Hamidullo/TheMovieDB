<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginLeft="8dp"
    android:background="#E6242A32"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/containerCastImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:cardCornerRadius="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cast_imageItem"
            android:scaleType="centerCrop"
            android:src="@drawable/person"
            android:layout_width="130dp"
            android:layout_height="170dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_personItem"
        app:layout_constraintTop_toBottomOf="@id/containerCastImage"
        app:layout_constraintEnd_toEndOf="@id/containerCastImage"
        app:layout_constraintStart_toStartOf="@id/containerCastImage"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        android:text="Tom Holland"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="126dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/character_personItem"
        app:layout_constraintTop_toBottomOf="@id/name_personItem"
        app:layout_constraintEnd_toEndOf="@id/containerCastImage"
        app:layout_constraintStart_toStartOf="@id/containerCastImage"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="2dp"
        android:layout_marginStart="6dp"
        android:text="Peter Parker / Spider-Man"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_width="126dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>