<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242A32"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui2.ActorFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerActorDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/container_imageActor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profileActorDetail"
                    android:src="@drawable/actor"
                    android:scaleType="centerCrop"
                    android:layout_width="180dp"
                    android:layout_height="280dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nameActorDetail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="24dp"
                android:text="Benedict Cumberbatch"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fullNameActorDetail"
                app:layout_constraintTop_toBottomOf="@+id/nameActorDetail"
                app:layout_constraintStart_toEndOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="6dp"
                android:text="Benedict Timothy Carlton Cumberbatch"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/known_forActorDetailText"
                app:layout_constraintTop_toBottomOf="@id/fullNameActorDetail"
                app:layout_constraintStart_toEndOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginTop="6dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="Known For"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/knownForActorDetail"
                app:layout_constraintTop_toBottomOf="@id/known_forActorDetailText"
                app:layout_constraintStart_toEndOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                android:text="Acting"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/popularity_actorDetailText"
                app:layout_constraintTop_toBottomOf="@id/knownForActorDetail"
                app:layout_constraintStart_toEndOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="6dp"
                android:text="Popularity"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/popularityActorDetail"
                app:layout_constraintTop_toBottomOf="@id/popularity_actorDetailText"
                app:layout_constraintStart_toEndOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                android:text="43.057"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/biography_actorDetailText"
                app:layout_constraintTop_toBottomOf="@id/container_imageActor"
                app:layout_constraintStart_toStartOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="12dp"
                android:text="Biography:"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/biographyActorDetail"
                app:layout_constraintTop_toBottomOf="@id/biography_actorDetailText"
                app:layout_constraintStart_toStartOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:text="@string/biography"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/personal_infoActorDetailText"
                app:layout_constraintTop_toBottomOf="@id/biographyActorDetail"
                app:layout_constraintStart_toStartOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="12dp"
                android:text="Personal Info:"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/birthday_actorDetailText"
                app:layout_constraintTop_toBottomOf="@id/personal_infoActorDetailText"
                app:layout_constraintStart_toStartOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="8dp"
                android:text="Birthday:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/birthdayActorDetail"
                app:layout_constraintTop_toBottomOf="@id/birthday_actorDetailText"
                app:layout_constraintStart_toStartOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:text="1976-07-19"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/gender_actorDetailText"
                app:layout_constraintTop_toBottomOf="@id/personal_infoActorDetailText"
                app:layout_constraintStart_toEndOf="@id/birthday_actorDetailText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="8dp"
                android:text="Gender:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/genderActorDetail"
                app:layout_constraintTop_toBottomOf="@id/birthday_actorDetailText"
                app:layout_constraintStart_toStartOf="@id/gender_actorDetailText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:text="Male"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/place_of_birthActorDetailText"
                app:layout_constraintTop_toBottomOf="@id/birthdayActorDetail"
                app:layout_constraintStart_toStartOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="8dp"
                android:text="Place of Birth:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/placeOfBirthActorDetail"
                app:layout_constraintTop_toBottomOf="@id/place_of_birthActorDetailText"
                app:layout_constraintStart_toStartOf="@id/container_imageActor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:textSize="20sp"
                android:text="London, England, UK"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/known_forListActorDetailList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/placeOfBirthActorDetail" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loadingIndicatorA"
        android:visibility="gone"
        android:indeterminateTint="#20C774"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>




